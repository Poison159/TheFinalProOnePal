@model ProOnePal.Models.Result

<div class="jumbotron">
    <p style="font-family:'Segoe Print'; padding-top:0px; font-size:larger" class="text-center top-right">Result Scorers</p>
</div>
<div class="label-danger">
    <p>@ViewBag.error</p>
</div>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("GoalsInfo", "Fixtures", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label("Player", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("PlayersId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add team" class="btn btn-default" />
                </div>
            </div>

        }
    </div>

    <div id="Details" class="col-md-6">
        <h3 style="font-family:'Segoe Print'">Goal Scorers</h3>
        <hr />
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Kasi
                </th>
            </tr>

            @foreach (var plResultStat in Model.scorers)
            {
                <tr>
                    <td style="font-family:'Segoe Print'">
                        <a href="@Url.Action("Details", "Player", new { id = plResultStat.playerId })">@plResultStat.player.name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => plResultStat.player.age)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>